{
  "name": "@kingdutch/twitch-overlay",
  "version": "0.4.0",
  "description": "The Twitch overlay for Kingdutch's stream",
  "author": "Alexander Varwijk <git@twitch.alexandervarwijk.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "shared",
    "client",
    "server"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:rescript-client": "yarn workspace @kingdutch/twitch-overlay-client run dev",
    "dev:rescript-server": "yarn workspace @kingdutch/twitch-overlay-server run dev",
    "dev:esbuild": "NODE_ENV=development node ./dev.js",
    "dev:server": "NODE_ENV=development nodemon --verbose --watch server/ --watch shared/ server",
    "build": "run-s build:*",
    "build:rescript": "yarn workspaces run build",
    "build:package": "node ./build.js",
    "build:copy": "cp client/public/* dist/",
    "start": "yarn workspace @kingdutch/twitch-overlay-server start",
    "clean": "run-p clean:*",
    "clean:webpack": "rm -r dist",
    "clean:rescript": "yarn workspaces run clean"
  },
  "devDependencies": {
    "esbuild": "^0.14.8",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rescript": "^9.1.4"
  }
}
